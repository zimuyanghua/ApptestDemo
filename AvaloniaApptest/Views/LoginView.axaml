<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
             xmlns:vm="using:AvaloniaApptest.ViewModels"
             xmlns:u="https://irihi.tech/ursa"
             x:DataType="vm:LoginViewModel"
             x:Class="AvaloniaApptest.Views.LoginView">

  <Grid ColumnDefinitions="2*,*,2*">
    <StackPanel Grid.Column="1" Spacing="10" Margin="10" VerticalAlignment="Center">
      <TextBlock  Text="账号"/>
      <TextBox Classes="Bordered clearButton" Text="{Binding UserName}"
               GotFocus="TextBox_GotFocus"/>
      <TextBlock Text="密码"/>
      <TextBox PasswordChar="*" Classes="Bordered clearButton revealPasswordButton" Text="{Binding Password}"
               GotFocus="TextBox_GotFocus"/>
      <u:IconButton HotKey="Enter" Classes="Tertiary" Command="{Binding loginCommand}" HorizontalAlignment="Stretch" IsLoading="{Binding IsLogin}" Content="登录"/>
      <Button HotKey="Escape" Classes="Danger" Theme="{DynamicResource SolidButton}" Content="退出" Command="{Binding ExitCommand}"></Button>
    </StackPanel>
  </Grid>
  
</UserControl>
